#!/usr/bin/env bash
# This script stops the 7-highlander process.

# Find the PID of the 7-highlander process
highlander_pid=$(pgrep -f "7-highlander")

if [ -z "$highlander_pid" ]; then
    echo "7-highlander process not found"
else
    # Send SIGTERM to the process
    kill -s SIGTERM "$highlander_pid"
    echo "Terminated 7-highlander process (PID: $highlander_pid)"
fi
